<%- include('./layouts/header.ejs'); %>
    <div class="container">
        <div class="row justify-content-center custom-form">
            <div class="col-4 align-self-center">
                <h2>Login Here</h2>
                <form method="POST" action="">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="text" name="username" id="form2Example1" class="form-control" />
                        <label class="form-label" for="form2Example1">Username</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form2Example2" class="form-control" />
                        <label class="form-label" name="password" for="form2Example2">Password</label>
                    </div>

                    <!-- 2 column grid layout for inline styling -->
                    <div class="row mb-4">
                        <div class="col d-flex justify-content-center">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                <label class="form-check-label" for="form2Example31"> Remember me </label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit button -->
                    <button type="button submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                    <!-- Register buttons -->
                    <div class="text-center">
                        <p>Not a member? <a href="register">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('./layouts/footer.ejs'); %>